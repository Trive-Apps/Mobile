<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true">

    <RadioButton
        android:id="@+id/dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@android:color/transparent"
        tools:text="Select item here"
        style="@style/TextBase_Regular"
        android:textColor="@drawable/selector_checkbox_text"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:checked="true"
        android:drawableEnd="@drawable/checked_selector"
        android:drawableTint="@color/selector_checked"
        android:background="@drawable/checked_bg_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>